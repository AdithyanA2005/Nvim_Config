let g:mapleader = "\<space>"

syntax enable
set nowrap
set noswapfile
set number
set splitbelow
set splitright
set noshowmode

set updatetime=300
set timeoutlen=100

" Indent
set expandtab
set tabstop=4
set shiftwidth=4
set cinkeys-=:


" recommended by coc
set nobackup
set nowritebackup

" Enable the mouse
set mouse=a

set clipboard=unnamedplus
